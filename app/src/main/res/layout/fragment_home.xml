<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.HerollainFragment"
    android:background="@color/heroillain_card">

    <AutoCompleteTextView
        android:id="@+id/home__input__search_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:autofillHints="name"
        android:hint="@string/herollain_name"
        android:inputType="textAutoComplete"
        app:layout_constraintEnd_toStartOf="@+id/home__img__autocomplete_clear_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home__img__autocomplete_clear_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_close_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/home__input__search_bar"
        app:layout_constraintBottom_toBottomOf="@id/home__input__search_bar"
        android:contentDescription="@string/autocomplete_clear_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home__list__herollains_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        tools:listitem="@layout/home__herollains__row"
        app:layout_constraintTop_toBottomOf="@id/home__input__search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>